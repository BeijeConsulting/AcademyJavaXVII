<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="SuorMaryWeb">

		<class>web.rubrica.caroselli.Contact</class>
		<class>web.rubrica.caroselli.ContactDetail</class>

		<class>it.beije.suormary.bookstore.Author</class>
		<class>it.beije.suormary.bookstore.Book</class>
		<class>it.beije.suormary.bookstore.Order</class>
		<class>it.beije.suormary.bookstore.OrderItem</class>
		<class>it.beije.suormary.bookstore.User</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/suor_mary"/>
			<property name="javax.persistence.jdbc.user" value="root"/>

			<property name="javax.persistence.jdbc.password" value="password"/>

			<property name="javax.persistence.jdbc.password" value="beije"/>

		</properties>
	</persistence-unit>
</persistence>
